<%- include('./partials/header.ejs', {title: 'Login' }) %>
<%- include('./partials/navbar.ejs') %>

<div class="container">
<div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 mt-5 block">

    <form action="/login" method="post" class="needs-validation">

        <!-- Username input -->
        <div class="form-outline mb-4">
        <label class="form-label" for="username">Username</label>
        <div class="input-group has-validation">
            <input type="text" name="username" id="username" class="form-control" minlength="4" required>
            <!-- <div class="invalid-feedback" style="color: rgb(255, 96, 96)">Username required</div> -->
        </div>
            <p id="username-error-message" class="failed-login-attempt"></p>
         </div>

        <!-- Password input -->
        <div class="form-outline mb-2">
            <label class="form-label" for="password">Password</label>
        <div class="input-group has-validation">
            <input type="password" name="password" id="password" class="form-control" minlength="4" required/>
            <div class="invalid-feedback" style="color: rgb(255, 96, 96)">Password required</div>
        </div>
        
        <% if (failedAttempt) { %>
            <p class="failed-login-attempt mb-2">Please try again.</p>
        <% } %>
        
        <!-- Submit button -->
        <button type="submit" class="mt-3 btn btn-primary btn-block">Log in</button>
    </form>

    </div>
</div>
</div>

<!-- Validation script -->
<script src="validate_form.js"></script>

<%- include('./partials/footer.ejs') %>
